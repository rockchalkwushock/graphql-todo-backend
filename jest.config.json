{
  "bail": true,
  "testEnvironment": "node",
  "coveragePathIgnorePatterns": [
    "./api/config/*.js",
    "./api/services/auth/FB_Strategy.js",
    "./api/services/auth/VK_Strategy.js"
  ],
  "collectCoverageFrom": [
    "api/models/*.js",
    "api/resolvers/*.js",
    "api/schema/*.js",
    "api/services/auth/index.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 100,
      "functions": 100,
      "lines": 100,
      "statements": 100
    }
  }
}
